[alias]
        bmv = branch --move
        br = branch
        ck = checkout
        cm = commit
        df = diff
        dump = cat-file -p
        eb = checkout --orphan
        hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
        last = log -1 HEAD
        nb = checkout -b
        pl = pull --prune
        ps = push
        psf = push --force-with-lease
        rb = rebase
        rbi = rebase -i
        root = rev-parse --show-toplevel
        rs = reset
        sbi = "!f() { git submodule update --init --recursive; }; f"
        sbu = pull --recurse-submodules
        sh = stash
        st = status
        type = cat-file -t
        undo = reset --soft HEAD~1
        unstage = reset HEAD --
